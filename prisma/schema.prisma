generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id           Int      @id @default(autoincrement()) //chave primaria
  login        String
  email        String   @unique //email unico
  senha        String
  status       Boolean  @default(true) //defaut true
  hash         String? //opicional
  valorMensal  Float? //opicional
  criadoEm     DateTime @default(now())
}